<div class="container">
  <h2>Event Description</h2>
  <p><strong>Event:</strong> <%= @event.title %></p>
  <p><strong>About:</strong> <%= @event.description %></p></p>
  <p><strong>Ticket Price:</strong> <%= @event.ticket_price %>pp</p>
  <% if @event.photos.attached? %>
      <div class="card-carousel" id="event-show-carousel">
    <div id="carouselExampleIndicators-show" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators-show" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <%  @event.photos.each_with_index do |photo, idx| %>
          <button type="button" data-bs-target="#carouselExampleIndicators-show" data-bs-slide-to="<%= idx %>" aria-label="Slide <%= idx + 1 %>"></button>
        <% end %>
      </div>
      <div class="carousel-inner">
        <%  @event.photos.each_with_index do |photo, idx| %>
          <div class="carousel-item <%= "active" if idx.zero? %>">
            <%= cl_image_tag photo.key, alt:  @event.title, class: "d-block w-100" %>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators-show" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators-show" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  <% else %>
    <p>No images available for this event.</p>
  <% end %>
</div>
