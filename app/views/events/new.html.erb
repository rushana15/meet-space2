<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>List your venue</h3>
        <%= simple_form_for([@booking, @event]) do |f| %>
        <%= f.input :title, placeholder: 'Name of your event' %>
        <%= f.input :photos, as: :file, input_html: {multiple: true} %>
        <%= f.input :description, placeholder: 'describe your event' %>
        <div class="input-group">
          <%= f.label :reoccuring %>
          <%= f.input :reoccuring, placeholder: 'is this event a one-off or reoccurring?' %>
        </div>
        <%= f.input :ticket_price  %>

        <%= f.submit "Add Event", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>






































