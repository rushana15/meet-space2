


  <div class="banner">
    <%= video_tag('meet_vid.mp4', autoplay: :autoplay, loop: :loop, muted: :muted ) %>
  </div>
  <div class="greeting text-center my-4">
    <h1>MEETSPACE</h1>
    <h3>Network x Meet x Spaces</h3>
  </div>
  <div class="main-description text-center my-4">
    <h3 id="main-description-text"></h3>
    <h3>Looking for a venue for your next networking meeting or event? Meetspace can help connect you with the perfect venue to fit your needs. Whether for a group of 3 or 300, our carefully selected venue hosts will tailor your networking experiences to your needs.</h3> %>
  </div>

<div class="main-page">
  <div class="cards-container">
    <div class="card-item">
      <%= link_to category_venues_path('network') do %>
        <%= image_tag("4.jpg", width: 300, height: 300, crop: :fill, data: { action: "mouseover->description#showDescription mouseout->description#resetDescription", description: "Networking Venue Description" }) %>
      <% end %>

      <div class="card-text">
        <%= link_to 'Network', venues_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="card-item">
      <%= link_to category_venues_path('meet') do %>
        <%= image_tag("1.jpg", width: 300, height: 300, crop: :fill, data: { action: "mouseover->description#showDescription mouseout->description#resetDescription", description: "Meeting Venue Description" }) %>
      <% end %>

      <div class="card-text">
        <%= link_to 'Meet', venues_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="card-item">
      <%= link_to category_venues_path('celebrate') do %>
        <%= image_tag("2.jpg", width: 300, height: 300, crop: :fill, data: { action: "mouseover->description#showDescription mouseout->description#resetDescription", description: "Celebrating Venue Description" }) %>
      <% end %>

      <div class="card-text">
        <%= link_to 'Celebrate', venues_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="description text-center my-4" data-description-target="description">
    <h3 id="description-text">Hover over the images to see descriptions.</h3>

  </div>
  <div class="cards-container d-flex justify-content-around my-4">
    <div class="card-item card owner">
      <%= image_tag("james_avatar.jpg", class: "card-img-top", crop: :fill) %>
      <div class="card-body">
        <h5 class="card-title">For Venue Owners</h5>
        <p class="card-text">Advertise your venue and reach more customers by offering your space for networking events, meetings, and celebrations. Join Meetspace to showcase your venue and attract renters.</p>
        <%= link_to 'List Your Venue', new_venue_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="card-item card owner">
      <%= image_tag('t.jpg', class: "card-img-top", crop: :fill) %>
      <div class="card-body">
        <h5 class="card-title">For Event Planners</h5>
        <p class="card-text">Find the perfect venue for your next event. Whether it's a small meeting or a large celebration, Meetspace connects you with venue owners offering the perfect space for your needs.</p>
        <%= link_to 'Find a Venue', venues_path, class: 'btn btn-primary' %>
      </div>
    </div>
</div>
</div>
